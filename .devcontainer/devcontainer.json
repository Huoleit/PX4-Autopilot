// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.134.0/containers/cpp
{
	"name": "px4-dev-ros-melodic",
	"dockerFile": "Dockerfile",
	// "image": "px4io/px4-dev-ros-melodic:latest",

	"runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined", "--runtime=nvidia"],

	// Set *default* container specific settings.json values on container create.
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},
	"mounts": ["source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,ro=true",
		   "source=/home/cecil/PX4_ws,target=/workspaces/px4_ws,type=bind",
		],

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
	],

	"containerUser": "user",
	"containerEnv": {
		"LOCAL_USER_ID": "${localEnv:UID}",
		"DISPLAY": "${localEnv:DISPLAY}",
		"ROS_MASTER_URI": "http://172.17.0.2:11311",
		"ROS_IP": "172.17.0.2",
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.

	"postCreateCommand": "echo 'source /opt/ros/melodic/setup.bash' >> $HOME/.bashrc && echo 'alias launchmavros=\"roslaunch mavros px4.launch fcu_url:=udp://:14540@localhost:14580 gcs_url:=udp://@172.17.0.1:14550\"' >> $HOME/.bashrc",

}
